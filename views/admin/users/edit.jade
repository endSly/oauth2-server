extends ../layout

block content
  #pad-wrapper.new-user
    .row-fluid.header
      h3 Editing user #{user.name}
    .row-fluid.form-wrapper

      .span9.with-sidebar
        .container
          form(method='post', action='/admin/users/#{user._id}').new_user_form.inline-input
            input.span9(type='hidden', name='user_id', value=user._id)
            .span12.field-box
              label Name:
              input.span9(type='text', name='user[name]', value=user.name)
            .span12.field-box
              label Email:
              input.span9(type='text', name='user[email]', value=user.email)
            .span12.field-box
              label Password:
              input.span9(type='password', name='user[password]')
            .span12.field-box
              label Phone:
              input.span9(type='text')
            .span12.field-box
              label Website:
              input.span9(type='text')
            .span12.field-box
              label Address:
              .address-fields
                input.span12(type='text', placeholder='Street address')
                input.span12.small(type='text', placeholder='City')
                input.span12.small(type='text', placeholder='State')
                input.span12.small.last(type='text', placeholder='Postal Code')
            .span12.field-box.textarea
              label Notes:
              textarea.span9
              span.charactersleft 90 characters remaining. Field limited to 100 characters
            .span11.field-box.actions
              input.btn-glow.primary(type='submit', value='Save user')
              span OR
              input.reset(type='reset', value='Cancel')

