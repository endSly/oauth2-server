
#pad-wrapper.user-profile
  .row-fluid.header
    .span8
      h3.span8 {{client.title}}
      h4.span8 {{client.name}}
    .row.ctrls
      a.btn-flat.pull-right.danger.delete(data-toggle='tooltip', title='', data-placement='top', data-original-title='Delete user')
        i.icon-trash
        | Delete
      a.btn-flat.pull-right.edit(ng-href="/admin/clients/{{client._id}}/edit")
        i.icon-pencil
        | Edit
  .row-fluid
    .span12
      .section
        h6 Client Id
        br
        pre {{client._id}}

        h6 Client Secret
        br
        pre {{client.secret}}

      .section
        h6 Plans
        br
        table.table.table-hover
          thead
            tr
              th.span4 Title
              th.span4 Name
              th.span2.align-right Open access
              th.span2.align-right Default Plan
          tbody
            tr(ng-repeat='plan in client.plans')
              td {{plan.title}}
              td {{plan.name}}
              td.align-right
                i(ng-class="plan.open_access | iconBoolean")
              td.align-right
                i(ng-class="plan.default | iconBoolean")
